!!!
%html
  %head
    %title Terra Null Recordings
    = javascript_include_tag 'admin', 'data-turbolinks-track' => true
    = favicon_link_tag asset_path 'terra_null_logo_favicon.ico'
    = csrf_meta_tags
  %body
    #admin-nav
      - if admin_signed_in?
        = "Logged in as #{current_admin.email}"
        = link_to "Logout", destroy_admin_session_path, method: :delete
      - else
        = link_to "Login", new_admin_session_path
    = yield
